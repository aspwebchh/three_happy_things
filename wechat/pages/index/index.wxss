.record_input {
  border: 1px solid #ccc;
  background: #fff;
  width: 90%;
  position: fixed;
  bottom: 0rpx;
  overflow: hidden;
}
.group {
  border: 1px solid #ccc;
  width: 85%;
  margin-bottom: 20rpx;
  padding: 20rpx;
  border-radius: 15rpx;
}

.group > .date {
  color: gray;
  margin-bottom: 10rpx;
}

.group > .item {
  padding: 10rpx 0;
  text-align: left;
}
