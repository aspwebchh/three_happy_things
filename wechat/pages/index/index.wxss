page {
  background-color: #63cea3;
  color: #333;
}

.container {
  padding: 0 35rpx;
}

.record_input {
  background: #fff;
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  overflow: hidden;
  height: 90rpx;
  background-color: #44aa81;
  color: white;
  line-height: 90rpx;
  text-indent: 40rpx;
}

.item {
  padding: 3vw;
  width: calc(100% - 3vw * 2);
  display: flex;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  text-align: left;
  background-color: white;
  box-shadow: 1px 1px 1px #999;
}

.date {
  width: 100%;
  padding-bottom: 12rpx;
  padding-top: 22rpx;
  color: white;
  font-size: 0.8em;
  text-align: left;
}

.layer {
  position: fixed;
  width: 90vw;
  height: 300rpx;
  background-color: #fff;
  left: 50%;
  top: 15%;
  margin-left: -45vw;
  z-index: 999;
  border-radius: 8rpx;
}

.layer textarea {
  width: 70vw;
  height: 80%;
  left: 0;
  top: 0;
  display: inline-block;
  margin-left: 40rpx;
  margin-top: 5%;
  margin-right: 10rpx;
}

.layer image {
  width: 80rpx;
  height: 80rpx;
  display: inline-block;
  position: absolute;
  top: 50%;
  margin-top: -40rpx;
  opacity: 0.5;
}

.mask {
  width: 100vw;
  height: 100vh;
  position: fixed;
  background: #000;
  left: 0;
  top: 0;
  opacity: 0.5;
  z-index: 998;
}
